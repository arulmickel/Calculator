<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <!-- theme menu for toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="?attr/toolbarStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:title="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- used linear layout for expression + result which this is enough -->
    <LinearLayout
        android:id="@+id/displayContainer"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvExpression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:maxLines="1"
            android:ellipsize="end"
            android:text=""/>

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:text="@string/display_default"/>
    </LinearLayout>

    <!-- used "androidx.gridlayout.widget.GridLayout" for keypads which is flexible layouts(portrait/landscape) -->
    <androidx.gridlayout.widget.GridLayout

        android:id="@+id/grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/displayContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:columnCount="4"
        app:rowCount="6"
        app:useDefaultMargins="true">

        <Button android:id="@+id/btnAC" android:text="AC" style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnWeight="1" app:layout_rowWeight="1"/>
        <Button android:id="@+id/btnDel" android:text="DEL" style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnWeight="1" app:layout_rowWeight="1"/>
        <Button android:id="@+id/btnSign" android:text="+/−" style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnWeight="1" app:layout_rowWeight="1"/>
        <Button android:id="@+id/btnDiv" android:text="÷" style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnWeight="1" app:layout_rowWeight="1"/>

        <Button android:id="@+id/btn7" android:text="7" style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnWeight="1" app:layout_rowWeight="1"/>
        <Button android:id="@+id/btn8" android:text="8" style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnWeight="1" app:layout_rowWeight="1"/>
        <Button android:id="@+id/btn9" android:text="9" style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnWeight="1" app:layout_rowWeight="1"/>
        <Button android:id="@+id/btnMul" android:text="×" style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnWeight="1" app:layout_rowWeight="1"/>

        <Button android:id="@+id/btn4" android:text="4" style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnWeight="1" app:layout_rowWeight="1"/>
        <Button android:id="@+id/btn5" android:text="5" style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnWeight="1" app:layout_rowWeight="1"/>
        <Button android:id="@+id/btn6" android:text="6" style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnWeight="1" app:layout_rowWeight="1"/>
        <Button android:id="@+id/btnSub" android:text="−" style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnWeight="1" app:layout_rowWeight="1"/>

        <Button android:id="@+id/btn1" android:text="1" style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnWeight="1" app:layout_rowWeight="1"/>
        <Button android:id="@+id/btn2" android:text="2" style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnWeight="1" app:layout_rowWeight="1"/>
        <Button android:id="@+id/btn3" android:text="3" style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnWeight="1" app:layout_rowWeight="1"/>
        <Button android:id="@+id/btnAdd" android:text="+" style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnWeight="1" app:layout_rowWeight="1"/>

        <Button android:id="@+id/btn0" android:text="0" style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnSpan="2"
            app:layout_columnWeight="2" app:layout_rowWeight="1"/>

        <Button android:id="@+id/btnDot" android:text="." style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnWeight="1" app:layout_rowWeight="1"/>
        <Button android:id="@+id/btnEq" android:text="=" style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnWeight="1" app:layout_rowWeight="1"/>

        <Button android:id="@+id/btnSin" android:text="sin" style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnWeight="1" app:layout_rowWeight="1"/>
        <Button android:id="@+id/btnCos" android:text="cos" style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnWeight="1" app:layout_rowWeight="1"/>
        <Button android:id="@+id/btnTan" android:text="tan" style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnWeight="1" app:layout_rowWeight="1"/>
        <Button android:id="@+id/btnMode" android:text="@string/deg" style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp" android:layout_height="0dp" app:layout_columnWeight="1" app:layout_rowWeight="1"/>
    </androidx.gridlayout.widget.GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>